<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".questdetails.QuestDetailsActivity">


    <ImageView
        android:id="@+id/arrowBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/questDetailsSeparator"
        app:srcCompat="@drawable/arrow_back" />

    <View
        android:id="@+id/questDetailsSeparator"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginTop="12dp"
        android:background="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrowBack" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/questDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/questDetailsCharactersRecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/questDetailsSeparator"
        >

        <TextView
            android:id="@+id/questDetailsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/questDetailsLayout"
            app:layout_constraintStart_toStartOf="@+id/questDetailsLayout"/>
        <TextView
            android:id="@+id/questDetailsDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/questDetailsTime"
            app:layout_constraintStart_toStartOf="@+id/questDetailsLayout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questDetailsCharactersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>